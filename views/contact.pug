#location-map(style='width:100%;height:400px;margin-top:20px')


include includes/footer.pug


script.
  function myMap() {
      var mapCanvas = document.getElementById("location-map");
      var mapOptions = {
          center: new google.maps.LatLng(37.508604, 127.065801),
          zoom: 15
      }
      var map = new google.maps.Map(mapCanvas, mapOptions);
      var image = new google.maps.MarkerImage('/images/pin2.png',
          null, null, null, new google.maps.Size(50,67));

      var myLatLng = new google.maps.LatLng(37.508604, 127.065801);
      var marker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          icon: image
      });
      infoWindow(map, marker);

      google.maps.event.addListener(marker, 'click', function() {
          infowindow.open(map,marker);
      });

      // global infowindow
    google.maps.event.addDomListener(window, "load", myMap);

    var iw = new google.maps.InfoWindow({
    maxWidth: 350
  });

  function infoWindow(map, marker) {
    google.maps.event.addListener(marker, 'click', function() {
      var html = "<div class='infowindow'>12, Teheran-ro 108-gil,<br>Gangnam-gu,Seoul, Korea</div>";
      // set the content (saved in html variable using function closure)
      iw.setContent(html);
      // open the infowindow on the marker.
      iw.open(map, marker);
    });
  }
  }


script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAYAR9ha33tDQfl81KCVoePD_w3KcAaWGo&callback=myMap')
